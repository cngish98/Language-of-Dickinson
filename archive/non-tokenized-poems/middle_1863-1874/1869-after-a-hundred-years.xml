<?xml-model href="../dickinson_schema.rnc" type="application/relax-ng-compact-syntax"?>

<poem>
    <metadata>
        <first_line>After a hundred years</first_line>
        <date period="middle">1869</date>
        <poem_number>J1147</poem_number>
        <source>https://www.edickinson.org/editions/2/image_sets/12171742</source>
        <recipient>none</recipient>
        <poem_themes>time, nature, solitude, war?</poem_themes>
    </metadata>
    
    <body>
        <stanza> 
            <line><time>After a hundred years</time></line>
            <line>Nobody <variant>knew</variant> knows the Place</line>
            <line><emotion emotion_type="angst">Agony</emotion> that 
                <war>enacted there</war></line> <!--seems like this "agony" could be a site of a battle? -->
            <line>Motionless as Peace</line> 
        </stanza>
        
        <stanza> 
            <line><nature nature_type="earth">Weeds</nature> triumphant ranged</line>
            <line>Strangers strolled and <writing>spelled</writing></line>
            <line>At the <solitude>lone</solitude> <writing>Orthography</writing></line>
            <line>Of the Elder <death>Dead</death></line>
        </stanza>
        
        <stanza> 
            <line><nature nature_type="air">Winds</nature> of <nature nature_type="earth">Summer Fields</nature></line>
            <line><memory>Recollect</memory> the way -</line>
            <line>Instinct picking up the Key</line> <!--could this be marked up as memory too? or life maybe ? -->
            <line>Dropped by <memory>memory</memory> -</line>
        </stanza>
        
    </body>
</poem>

<!-- 
After a hundred years
Nobody  knew knows the Place
Agony that enacted there
Motionless as Peace

Weeds triumphant ranged
Strangers strolled and spelled
At the lone Orthography
Of the Elder Dead

Winds of Summer Fields
Recollect the way -
Instinct picking up the Key
Dropped by memory -
-->