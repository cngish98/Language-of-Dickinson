<poem>
    <metadata>
        <first_line>His Cheek is his Biographer -</first_line>
        <date period="late">1879</date> 
        <poem_number>J1460</poem_number>
        <source>https://www.edickinson.org/editions/2/image_sets/12172552</source>
        <recipient>Edward (Ned) Dickinson</recipient>
        <poem_themes>body, religion</poem_themes>
    </metadata>
    
    <body>
        <stanza> 
            <line><physical_body>His Cheek</physical_body> is his <writing>Biographer</writing> -</line>
            <!-- not sure exactly what connections she is trying to make but I can glean the general themes. -->
            <line>As long as he can <physical_body>blush</physical_body></line>
            <line><religion type="thing">Perdition</religion> is Opprobrium -</line>
            <line>Past that, he <religion>sins</religion> in <emotion emotion_type="peaceful">peace</emotion> -</line>
        </stanza>
    </body>
</poem>

