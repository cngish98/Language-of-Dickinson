<poem>
    <metadata>
        <title>A spider sewed at night</title>
        <date>1869</date>
        <poem_number>F1163B</poem_number> <!--Also Franklin, but it was the only version with this recipient -->
        <source>https://www.edickinson.org/editions/1/image_sets/12176931</source>
        <recipient>Louise and Frances Norcross</recipient>
    </metadata>
    <body>
        <stanza> 
            <line>A Spider sewed at night</line>
            <line>Without a light</line>
            <line>Upon/Opon an Arc of White -</line>
        </stanza>
        
        <stanza> 
            <line>If Ruff it was of Dame</line>
            <line>Or Shroud of Gnome</line>
            <line>Himself himself inform -</line>
        </stanza>
        
        <stanza> 
            <line>Of Immortality</line>
            <line>His strategy</line>
            <line>Was Physiognomy -</line>
        </stanza>
    </body>
</poem>
