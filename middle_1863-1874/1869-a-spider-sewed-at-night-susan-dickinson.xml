<poem>
    <metadata>
        <title>A Spider sewed at Night</title>
        <date>1869</date>
        <poem_number>J1138</poem_number>
        <source>https://www.edickinson.org/editions/2/image_sets/12171721</source>
        <recipient>Susan Dickinson</recipient>
    </metadata>
    
    <body>
        <stanza> 
            <line>A Spider sewed at Night</line>
            <line>Without a Light</line>
            <line>Upon an Arc of White.</line> 
        </stanza>
        
        <stanza> 
            <line>If Ruff it was of Dame</line>
            <line>Or Shroud of Gnome Himself himself inform.</line>
        </stanza>
        
        <stanza> 
            <line>Of Immortality</line>
            <line>His Strategy</line>
            <line>Was Physiognomy.</line>
        </stanza>
    </body>
</poem>
