<poem>
    <metadata>
        <first_line>You left me - sire - two legacies -</first_line>
        <date period="middle">1863</date>
        <poem_number>J644</poem_number>
        <source>https://www.edickinson.org/editions/2/image_sets/12170574</source>
        <recipient>none</recipient>
    </metadata>
    
    <body>
        <stanza> 
            <line><character name="sire" character_type="human" relation_with="me">You</character> 
                <action agent="sire" type="provide" judgment="ambiguous">left</action>
                <character name="me" character_type="human" relation_with="sire"></character>me 
                - Sire - <object type="legacy" tangible="no">two Legacies</object> -</line>
            <line>A Legacy of <love judgment="positive" love_type="unsure">Love</love></line>
            <line>A <character name="god" character_type="deity">Heavenly Father</character><religion theme="god"/> 
                would <variant>content</variant> - <action agent="passive"></action>suffice</line> <!--not really sure what was going on here -->
            <line>Had <character name="God">He</character> the offer of -</line> <!--elision here -->
        </stanza>
        
        <stanza>
            <line>You left me <object type="boundary" tangible="no" judgment="negative">Boundaries</object></line>
            <line>of <emotion emotion_type="pain" intensity="high">Pain</emotion> -</line>
            <line>Capacious as the <nature type="ocean" description="vast">Sea</nature> -</line>
            <line>Between <time duration="forever">Eternity</time> and <time>Time</time> -</line>
            <line><character name="sire">Your</character> <mind theme="consciousness">Consciousness</mind> - 
                and <character name="me">me</character> -</line>
