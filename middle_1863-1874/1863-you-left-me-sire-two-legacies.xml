<poem>
    <metadata>
        <first_line>You left me - sire - two legacies -</first_line>
        <date period="middle">1863</date>
        <poem_number>J644</poem_number>
        <source>https://www.edickinson.org/editions/2/image_sets/12170574</source>
        <recipient>none</recipient>
        <poem_themes>interpersonal relationships, duality, love, pain, time</poem_themes>
    </metadata>
    
    <body>
        <stanza> 
            <line><character name="sire" relation_with="me">You</character> 
                left <character name="me" relation_with="sire">me</character> - Sire - two Legacies -</line>
            <line><love>A Legacy of Love</love></line>
            <line>A <religion religious_type="person">Heavenly Father</religion> would  
                <variant>content</variant> - suffice</line>
            <line>Had <religion religious_type="person"></religion>He the offer of -</line> <!--elision here-->
        </stanza>
        
        <stanza> 
            <line>You left me Boundaries of <emotion emotion_type="pain">Pain</emotion> -</line>
            <line>Capacious as the <nature nature_type="water">Sea</nature> -</line>
            <line>Between <time>Eternity</time> and <time>Time</time> -</line>
            <line>Your <mind>Consciousness</mind> - and Me -</line>
        </stanza>
    </body>
</poem>

