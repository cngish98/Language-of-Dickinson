<?xml version="1.0" encoding="UTF-8"?>
<?xml-model href="../dickinson_schema.rnc" type="application/relax-ng-compact-syntax"?>
<poem>
   <metadata>
      <first_line>A Word dropped careless on a Page</first_line>
      <date period="middle">1873</date>
      <poem_number>J1261</poem_number>
      <source>https://www.edickinson.org/editions/2/image_sets/12172032</source>
      <recipient>Louise and Frances Norcross</recipient>
      <poem_themes>writing, the body</poem_themes>
   </metadata>
   <body>
      <stanza>
         <line>
            <token xml:id="t_1_1">A</token>
            <token xml:id="t_1_2">Word</token>
            <token xml:id="t_1_3">dropped</token>
            <token xml:id="t_1_4">careless</token>
            <token xml:id="t_1_5">on</token>
            <token xml:id="t_1_6">a</token>
            <token xml:id="t_1_7">Page</token>
         </line>
         <line>
            <token xml:id="t_2_1">May</token>
            <variant>
               <token xml:id="t_2_2">consecrated</token>
            </variant>
            <token xml:id="t_2_3">stimulate</token>
            <token xml:id="t_2_4">an</token>
            <physical_body>
               <token xml:id="t_2_5">eye</token>
            </physical_body>
         </line>
         <!--could be elision depending
                on if you use the variant or not -->
         <line>
            <token xml:id="t_3_1">When</token>
            <token xml:id="t_3_2">folded</token>
            <token xml:id="t_3_3">in</token>
            <time>
               <token xml:id="t_3_4">perpetual</token>
            </time>
            <writing>
               <token xml:id="t_3_5">seam</token>
            </writing>
         </line>
         <!-- seam I am assuming, is like a fold in a piece of paper -->
         <line>
            <token xml:id="t_4_1">The</token>
            <token xml:id="t_4_2">Wrinkled</token>
            <variant>
               <token xml:id="t_4_3">Author</token>
            </variant>
            <writing>
               <token xml:id="t_4_4">Maker</token>
            </writing>
            <token xml:id="t_4_5">lie</token>
         </line>
         <!-- Author and Maker can both be a writer -->
      </stanza>
      <stanza>
         <line>
            <physical_body body_type="ailment">
               <token xml:id="t_5_1">Infection</token>
            </physical_body>
            <token xml:id="t_5_2">in</token>
            <token xml:id="t_5_3">the</token>
            <writing>
               <token xml:id="t_5_4">sentence</token>
            </writing>
            <token xml:id="t_5_5">breeds</token>
         </line>
         <line>
            <token xml:id="t_6_1">We</token>
            <token xml:id="t_6_2">may</token>
            <token xml:id="t_6_3">inhale</token>
            <emotion emotion_type="angst">
               <token xml:id="t_6_4">Despair</token>
            </emotion>
         </line>
         <line>
            <token xml:id="t_7_1">At</token>
            <time>
               <token xml:id="t_7_2">distances</token>
               <token xml:id="t_7_3">of</token>
               <token xml:id="t_7_4">Centuries</token>
            </time>
         </line>
         <line>
            <token xml:id="t_8_1">From</token>
            <token xml:id="t_8_2">the</token>
            <physical_body body_type="ailment">
               <token xml:id="t_8_3">Malaria</token>
            </physical_body>
            <token xml:id="t_8_4">-</token>
         </line>
      </stanza>
   </body>
</poem>
<!-- 
A Word dropped careless on a Page
May  consecrated. stimulate an eye
When folded in perpetual seam
The Wrinkled  Author Maker lie

Infection in the sentence breeds
We may inhale Despair
At distances of Centuries
From the Malaria -
-->
