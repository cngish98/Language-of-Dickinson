   <metadata>
      <first_line>The Mind lives on the Heart</first_line>
      <date period="late">1876</date>
      <poem_number>J1355</poem_number>
      <source>https://www.edickinson.org/editions/2/image_sets/12172269</source>
      <recipient>T.W. Higginson</recipient>
      <poem_themes>the mind, body, eating, emotion</poem_themes>
      <ellipsis_present>yes</ellipsis_present>
   </metadata>
   <body>
      <stanza>
         <line>
            <mind>
               <token xml:id="t_1_1">The</token>
               <token xml:id="t_1_2">Mind</token>
            </mind>
            <token xml:id="t_1_3">lives</token>
            <token xml:id="t_1_4">on</token>
            <token xml:id="t_1_5">the</token>
            <emotion>
               <token xml:id="t_1_6">Heart</token>
            </emotion>
         </line>
         <line>
            <token xml:id="t_2_1">Like</token>
            <token xml:id="t_2_2">any</token>
            <physical_body body_type="ailment">
            <token xml:id="t_2_3">Parasite</token>
            </physical_body>
            <token xml:id="t_2_4">-</token>
         </line>
         <line>
            <token xml:id="t_3_1">If</token>
            <token xml:id="t_3_2">that</token>
            <token xml:id="t_3_3">is</token>
            <token xml:id="t_3_4">full</token>
            <token xml:id="t_3_5">of</token>
            <eating>
               <token xml:id="t_3_6">Meat</token>
            </eating>
         </line>
         <line>
            <mind>
               <token xml:id="t_4_1">The</token>
               <token xml:id="t_4_2">Mind</token>
            </mind>
            <token xml:id="t_4_3">is</token>
            <eating>
               <token xml:id="t_4_4">fat</token>
            </eating>
            <token xml:id="t_4_5">.</token>
         </line>
      </stanza>
      <stanza>
         <line>
            <token xml:id="t_5_1">But</token>
            <token xml:id="t_5_2">if</token>
            <token xml:id="t_5_3">the</token>
            <token xml:id="t_5_4">Heart</token>
            <token xml:id="t_5_5">omit</token>
         </line>
         <line>
            <ellipsis ellipsis_type="clausal" elided_pos="conjunction" possible_string="and"/>
