<poem>
    <metadata>
        <first_line>Meeting by Accident,</first_line>
        <date period="late">1882</date> 
        <poem_number>J1548</poem_number>
        <source>https://www.edickinson.org/editions/2/image_sets/12172786</source>
        <recipient>none</recipient>
        <poem_themes></poem_themes>
    </metadata>
    
    <body>
        <stanza> 
            <line>Meeting by Accident,</line>
            <line>We hovered by design -</line>
            <line>As often as a <time>Century</time></line>
            <line>An error so divine</line>
            <line>Is ratified by Destiny,</line>
            <line>But Destiny is <time>old</time></line>
            <line>And <wealth>economical of Bliss</wealth></line>
            <line>As Midas is of <wealth>Gold</wealth> -</line>
        </stanza>
    </body>
</poem>

