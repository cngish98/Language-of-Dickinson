<?xml-model href="../dickinson_schema.rnc" type="application/relax-ng-compact-syntax"?>

<poem>
    <metadata>
        <first_line>How lonesome the Wind must feel Nights -</first_line>
        <date period="late">1877</date> 
        <poem_number>J1418</poem_number>
        <source>https://www.edickinson.org/editions/2/image_sets/12172451</source>
        <recipient>none</recipient>
        <poem_themes>nature, emotion, solitude</poem_themes>
    </metadata>
    
    <body>
        <stanza>
            <line>How <solitude>lonesome</solitude> the <nature nature_type="air">Wind</nature>
                must feel <darkness>Nights</darkness><time/> -</line> <!--marking up time of day
                    as both light/dark and as time, because both seem relevant -->
            <line>When People have put out the <light>Lights</light></line>
            <line>And everything that has an Inn</line>
            <line>Closes <variant>his</variant> the shutter and goes in -</line>
        </stanza>

        <stanza>
            <line>How <emotion emotion_type="self-importance">pompous</emotion> the Wind must feel 
                <time>Noons</time><light/></line>
            <line>Stepping to incorporeal <music>Tunes</music></line>
            <line>Correcting errors of <nature nature_type="air">the sky</nature></line>
            <line>And clarifying <nature nature_type="general">scenery</nature></line>
        </stanza>

        <stanza>
            <line>How <emotion emotion_type="strength">mighty</emotion> the Wind must feel 
                <time>Morns</time><light/></line>
            <line>Encamping on a <nature nature_type="air">thousand dawns</nature><time/></line>
            <line>Espousing each and spurning all</line>
            <line>Then soaring to his <variant>Turret</variant>
                <religion type="place">Temple</religion> Tall -</line> <!--not sure if this temple is religious or not-->
        </stanza>
    </body>
</poem>

<!--POST PLAIN TEXT OF POEM BELOW -->
<!-- 
    How lonesome the Wind must feel Nights -
    When People have put out the Lights
    And everything that has an Inn
    Closes his/the shutter and goes in -
    
    How pompous the Wind must feel Noons
    Stepping to incorporeal Tunes
    Correcting errors of the sky
    And clarifying scenery
    
    How mighty the Wind must feel Morns
    Encamping on a thousand dawns
    Espousing each and spurning all
    Then soaring to his  Turret/Temple Tall - 
-->
