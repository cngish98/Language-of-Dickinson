<?xml-model href="../dickinson_schema.rnc" type="application/relax-ng-compact-syntax"?>

<poem>
    <metadata>
        <first_line>To see her is a Picture -</first_line>
        <date period="late">1883</date> 
        <poem_number>J1568</poem_number>
        <source>https://www.edickinson.org/editions/2/image_sets/12172842</source>
        <recipient>Susan Dickinson</recipient>
        <poem_themes></poem_themes>
    </metadata>
    
    <body>
        <stanza> 
            <line>To see her is a Picture -</line>
            <line>To hear her is a <music>Tune</music> -</line>
            <line>To know her an Intemperance</line>
            <line>As innocent as <time>June</time> -</line>
            <line>To know her not - Affliction -</line>
            <line>To own her for a Friend</line>
            <line>A warmth as near as if the <nature nature_type="space">Sun</nature></line>
            <line>Were <light>shining</light> in your <physical_body>Hand</physical_body>.</line>
        </stanza>
    </body>
</poem>

